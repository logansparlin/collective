@import 'jeet'
@import 'rupture'
@import '*/*.import.styl'
global-reset()

*
    box-sizing border-box

html, body, #react-root
    width 100%
    height 100%
    margin 0
    padding 0
    font-family 'proxima nova'
    letter-spacing 0.07em
    overflow hidden

h1, h2, h3
    font-family 'brandon-grotesque'
h1
    font-size 200%
h2
    font-size 175%
h3
    font-size 150%
h4
    font-size 125%
h5
    font-size 100%
h6
    font-size 75%

ul
    font-size 12px
    li
        cursor pointer
