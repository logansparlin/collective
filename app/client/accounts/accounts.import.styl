.accounts-container
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    bottom 0
    z-index 50
    .overlay
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        cursor pointer
        background rgba(30, 30, 30, 0.95)
    h2
        text-transform uppercase
        letter-spacing 0.1em
        text-align center
        font-weight bold
    .accounts-form
        position absolute
        background white
        padding 1em 3em
        width 400px
        top 50%
        left 50%
        transform translate(-50%, -50%)
    .input-container
        width 100%
        position relative
        margin 20px 0
        label
            position absolute
            top 50%
            left 0
            transform translateY(-50%)
            text-transform uppercase
            letter-spacing 0.1em
            font-size 0.6em
            color #666
            transition all 200ms ease-out
            pointer-events none
        input
            width 100%
            border none
            outline none
            background transparent
            border-bottom 1px solid blue
            padding 10px 0
        &.focused, &.has-value
            label
                color blue
                transform translateY(-250%)
                transition all 200ms ease-out


.close-icon
    position absolute
    top 40px
    right 40px
    width 25px
    height 18px
    cursor pointer
    .bar
        display block
        position absolute
        width 100%
        height 3px
        background white
        left 50%
        top 50%
        &:nth-of-type(1)
            transform translate(-50%, -50%) rotate(45deg)
        &:nth-of-type(2)
            transform translate(-50%, -50%) rotate(-45deg)
