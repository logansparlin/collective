.accounts-container
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    bottom 0
    z-index 50
    .overlay
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        cursor pointer
        background rgba(30, 30, 30, 0.95)
    h2
        text-transform uppercase
        letter-spacing 0.1em
        text-align center
        color #333
        font-size 1em
        margin-bottom 0.5em
    .accounts-form
        position absolute
        background white
        padding 2em 3em
        width 400px
        top 50%
        left 50%
        transform translate(-50%, -50%)
        button
            padding 10px
            color white
            outline none
            border none
            background blue
            text-transform uppercase
            letter-spacing 0.1em
            margin 10px 0
            width 100%
            font-weight bold
            transition all 200ms ease-out
            cursor pointer
            &:hover
                background darken(blue, 20%)
                transition all 200ms ease-out
    .input-container
        width 100%
        position relative
        margin 20px 0
        &.half
            width 48%
            margin 0
            display inline-block
            &:first-of-type
                margin-right 4%
        label
            position absolute
            top 50%
            left 0
            background transparent
            transform translate3d(0, -50%, 0)
            text-transform uppercase
            letter-spacing 0.1em
            font-size 0.6em
            color #666
            transition all 200ms ease-out
            pointer-events none
        input
            width 100%
            border none
            outline none
            background transparent
            border-bottom 1px solid blue
            padding 10px 0
            font-size 14px
            overflow visible
        &.focused, &.has-value
            label
                color blue
                transform translate3d(0, -250%, 0)
                transition all 200ms ease-out


.close-icon
    position absolute
    top 40px
    right 40px
    width 25px
    height 18px
    cursor pointer
    .bar
        display block
        position absolute
        width 100%
        height 3px
        background white
        left 50%
        top 50%
        &:nth-of-type(1)
            transform translate(-50%, -50%) rotate(45deg)
        &:nth-of-type(2)
            transform translate(-50%, -50%) rotate(-45deg)
