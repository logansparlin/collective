#landing-container
    .landing-hero
        position relative
        color white
        width 100%
        height 600px
        background #000 url('../img/background.jpg') no-repeat center center
        background-size cover
        h1
            position absolute
            color white
            top 50%
            left 50%
            transform translate(-50%, -50%)
            text-transform uppercase
            letter-spacing 0.4em
            font-weight 700
            z-index 1
    #landing-nav
        position absolute
        list-style none
        top 20px
        right 50px
        z-index 1
        ul li
            display inline-block
            padding 10px 20px
            font-weight 300
            margin 0 10px
            letter-spacing 0.2em
            text-transform uppercase
        .signup-link
            border 1px solid white
            &:hover
                background white
                color blue
